<h1>All <%= @category.name %></h1>

<div class="row">
  <% @products_by_cat.each do |product| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <p><%= image_tag product.pic.url(:medium) %></p>
          <h4><%= number_to_currency product.price %></h4>
          <h4><%= product.name %></h4>
        </div>
      </div>
    </div>
    <% end %>
</div>
