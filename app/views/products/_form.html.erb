<%= form_for @product do |f| %>
<div class="field form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div><br />
<div class="field form-group">
  <%= f.label :price %>
  <%= f.number_field :price %>
</div><br />
<div class="field form-group">
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</div><br />
<div class="field form-group">
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>
</div><br />
<div class="field form-group">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div><br />
<div class="form-group">
  <%= f.label "Condition" %>
  <%= f.collection_select(:condition_id, Condition.all, :id, :status) %>
</div><br />
<div class="form-group">
  <%= f.label "Category" %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
</div><br />
<div class="field form-group">
    <%= f.label "Product Photo" %><br>
    <%= f.file_field :avatar %>
</div><br />
<div class="form-group cant-see-me">
  <%= f.number_field :user_id, value: current_user.id %>
</div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>

<%= link_to "Back", products_path, class: "btn btn-primary" %>
